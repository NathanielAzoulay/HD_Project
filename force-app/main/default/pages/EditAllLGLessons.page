<apex:page controller="RSMassEditAll.RSMassEdit"  docType="html-5.0" tabStyle="LG_Lesson__c" showHeader="false" >
      <style>
      
       .dis{
        opacity: 0.65; 
        cursor: not-allowed;
        }
        #loading-image {
               position: fixed;
               top: 40%;
               left: 47%;
               width:4%;
            } 
            #loading {
               width: 100%;
               height: 100%;
               background-color: rgba(255, 255, 255, 1) !important;
               left: 0;
               right: 0;
               top: 0;
               bottom: 0;
               position: fixed;
               display: block;
               text-align: center;
               z-index: 9005;
            }   
      </style> 
    <apex:form id="form">
        <div >
            <apex:pageBlock >
                <apex:pageMessages />
             <apex:pageBlock >  
              <apex:pageBlockButtons location="bottom">
                        <apex:commandButton value="search"  action="{!queryFilter}"  status="counterStatus" id="button" rerender="form" >
                            
                            <apex:actionStatus id="counterStatus"  startText="loading ...... " > 
                                            <apex:facet name="start" >
                                            <div class="slds-spinner--medium" id="loading" ng-if="isloading">
                                               <img ng-show="isloading" id="loading-image" src="{!URLFOR($Resource.LoadingImage)}" alt="Loading..." />    
                                            </div> 
                                            </apex:facet>
                                            
                                        </apex:actionStatus>
                       </apex:commandButton>
                    </apex:pageBlockButtons>
                    
                    <apex:pageBlockSection title="Filter By Date " >
                        <apex:pageBlockTable value="{!Datefields.size}" var="f" rendered="{!Datefields.size>0}" >
                            <apex:column headerValue="Date Field">   
                                <apex:selectList value="{!fdate}" size="1"  > 
                                    <apex:selectOptions value="{!Datefields}">                     
                                    </apex:selectOptions>               
                                </apex:selectList> 
                            </apex:column>
                            <apex:column headerValue="from">
                                <apex:input value="{!fromdate}" title="from Date" type="datetime-local" />
                                </apex:column>
                            <apex:column headerValue="to">    
                                <apex:input value="{!todate}" title="To Date" type="datetime-local" >
                                </apex:input>    
                            </apex:column>   
                        </apex:pageBlockTable> 
                    </apex:pageBlockSection>
                    <apex:pageBlockSection title="Filter " >
                        <apex:pageBlockTable value="{!robj}" var="f"  >
                            <apex:repeat value="{!$ObjectType.LG_Lesson__c.FieldSets.FilterMassEdit}" var="field">
                                <apex:column headerValue="{!field.label}" rendered="{!if ((field.Type='date') || (field.Type='datetime'),false,true)}" >
                                    <apex:inputField value="{!f[field]}" required="false" >
                                    </apex:inputField>    
                                </apex:column>  
                            </apex:repeat>
                        </apex:pageBlockTable> 
                    </apex:pageBlockSection>  
                </apex:pageBlock> 
                <apex:pageBlock id="thePageBlock">   
                    <apex:pageBlockButtons >
                        <apex:commandButton value="save"  action="{!save}"  status="counterStatus" id="button" rerender="form"  >
                             <apex:actionStatus id="counterStatus"  startText="loading ...... " > 
                                            <apex:facet name="start" >
                                            <div class="slds-spinner--medium" id="loading" ng-if="isloading">
                                               <img ng-show="isloading" id="loading-image" src="{!URLFOR($Resource.LoadingImage)}" alt="Loading..." />    
                                            </div> 
                                            </apex:facet>
                                            
                                        </apex:actionStatus>
                        </apex:commandButton>
                        <apex:commandButton value="Return"  action="{!rReturn}"  >
                        </apex:commandButton>
                       <apex:commandButton value="<<" action="{!beginning}" disabled="{!DisablePrevious}" styleClass="{!If(DisablePrevious,'dis','')}"/>
                      <apex:commandButton value="<" action="{!previous}" disabled="{!DisablePrevious}" styleClass="{!If(DisablePrevious,'dis','')}"/>
                      <apex:commandButton value=">" action="{!next}" disabled="{!DisableNext}" styleClass="{!If(DisableNext,'dis','')}"  >
                      </apex:commandButton>
                      <apex:commandButton value=">>" action="{!last}" disabled="{!DisableNext}" styleClass="{!If(DisableNext,'dis','')}" />
                    </apex:pageBlockButtons>
                     <br/>
                <apex:outputPanel rendered="{!DisableNext = false}" >
                     {!counter+1}-{!counter+limitSize} of {!rSobjectList.size} Records
                    </apex:outputPanel>
                    <apex:outputPanel rendered="{!DisableNext}" >
                     {!counter+1}-{!rSobjectList.size} of {!rSobjectList.size} Records
                    </apex:outputPanel>
                    <br/>
                     <div style="max-height:350px;overflow:auto;">
                    <apex:pageBlockTable value="{!rSobjectListToShow}" var="a" id="myId" >
                        <apex:column headerValue="LG Lesson Code">
                        <apex:inputField value="{!a['Name']}"/>
                        </apex:column>
                        <apex:column headerValue="LG">
                        <apex:outputField value="{!a['LG__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Type">
                        <apex:inputField value="{!a['Lesson_Type__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Status">
                        <apex:inputField value="{!a['Lesson_Status__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Reason for Cancelation">
                        <apex:inputField value="{!a['Reason_for_Cancelation__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Book">
                        <apex:inputField value="{!a['Book__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Unit or Episode">
                        <apex:inputField value="{!a['UnitorEpisode__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson">
                        <apex:inputField value="{!a['Lesson__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Subject">
                        <apex:inputField value="{!a['Lesson_Subject__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Remarks">
                        <apex:inputField value="{!a['Lesson_Remarks__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Date/Hour">
                        <apex:inputField value="{!a['Lesson_Date_Hour__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Day">
                        <apex:inputField value="{!a['Day__c']}"/>
                        </apex:column>
                        <apex:column headerValue="Lesson Teacher">
                        <apex:inputField value="{!a['Lesson_Teacher__c']}"/>
                        </apex:column>
                        
                        
                    </apex:pageBlockTable>
                    </div>
                </apex:pageBlock>     
            </apex:pageBlock>
        </div>
        
    </apex:form>
    
</apex:page>